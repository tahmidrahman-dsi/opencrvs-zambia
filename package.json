{
  "name": "@opencrvs/resources",
  "version": "1.0.0-alpha.2.0",
  "description": "OpenCRVS resources for reference data",
  "license": "MPL-2.0",
  "scripts": {
    "e2e": "cypress run",
    "open:e2e": "CYPRESS_LOGIN_URL=http://localhost:3020/ CYPRESS_CLIENT_URL=http://localhost:3000/ CYPRESS_AUTH_URL=http://localhost:4040/ cypress open",
    "test:watch": "jest --watch",
    "open:cov": "yarn test && opener coverage/index.html",
    "precommit": "tslint --project ./tsconfig.json && lint-staged",
    "test": "jest  --silent --noStackTrace --coverage && yarn test:compilation",
    "test:compilation": "tsc --noEmit",
    "start": "cross-env NODE_ENV=development nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "start:prod": "ts-node --transpile-only -r tsconfig-paths/register src/index.ts",
    "db:populate": "bash createReferenceData.sh",
    "db:backup:create": "DEV=true ./backup-metadata.sh",
    "db:backup:restore": "DEV=true ./restore-metadata.sh",
    "db:clear:all": "DEV=true ./clear-all-data.sh"
  },
  "devDependencies": {
    "csv2json": "^1.4.2",
    "dotenv": "^6.1.0",
    "json2csv": "^4.3.0",
    "jsonwebtoken": "^8.3.0"
  },
  "dependencies": {
    "@types/chalk": "^2.2.0",
    "@types/code": "^4.0.3",
    "@types/csv2json": "^1.4.0",
    "@types/dotenv": "^6.1.0",
    "@types/fhir": "^0.0.30",
    "@types/geojson": "^7946.0.4",
    "@types/hapi": "^17.8.2",
    "@types/hapi-auth-jwt2": "8.0.1",
    "@types/hapi-pino": "^6.4.0",
    "@types/inert": "^5.1.2",
    "@types/jest": "^24.0.13",
    "@types/joi": "^14.3.3",
    "@types/json2csv": "^4.2.0",
    "@types/lodash": "^4.14.117",
    "@types/mime-types": "^2.1.0",
    "@types/mongoose": "^5.0.16",
    "@types/node": "^10.12.5",
    "@types/node-fetch": "^2.3.4",
    "@types/pino": "^5.14.0",
    "@types/string-similarity": "^3.0.0",
    "@types/uuid": "^3.4.4",
    "app-module-path": "^2.2.0",
    "boom": "^7.3.0",
    "chalk": "^2.4.1",
    "country-data": "^0.0.31",
    "cross-env": "^6.0.3",
    "crypto": "^1.0.1",
    "cypress": "^3.8.2",
    "eslint": "^5.8.0",
    "eslint-config-prettier": "^3.1.0",
    "hapi": "^17.8.1",
    "hapi-auth-jwt2": "8.1.0",
    "hapi-pino": "^6.3.0",
    "hapi-sentry": "^2.1.0",
    "inert": "^5.1.3",
    "jest": "24.7.1",
    "jest-fetch-mock": "^2.1.2",
    "joi": "^14.3.1",
    "lint-staged": "^7.1.0",
    "lodash": "^4.17.11",
    "mime-types": "^2.1.24",
    "mongoose": "^5.1.5",
    "node-fetch": "^2.6.0",
    "nodemon": "^1.18.5",
    "nyc": "^13.1.0",
    "opener": "^1.5.1",
    "pino": "^5.14.0",
    "prettier": "^1.19.1",
    "string-similarity": "^3.0.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^6.1.1",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.12.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^3.7.4",
    "typestyle": "^1.3.7",
    "uuid": "^3.3.2",
    "whatwg-fetch": "^3.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,graphql}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "@resources/(.*)": "<rootDir>/src/$1"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "setupFiles": [
      "./test/setupJest.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
